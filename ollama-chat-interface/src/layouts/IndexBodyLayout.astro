---
import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
import DarkModeToggle from "../components/DarkModeToggle.astro";
import ChatInterface from "../components/ChatInterface.astro";
---

<body class="bg-white dark:bg-gray-900 text-black dark:text-white">
  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">{t("site.title")}</h1>
      <LanguageSelector
        showFlag={true}
        class="bg-white dark:bg-gray-700 text-gray-800 dark:text-white border border-gray-300 dark:border-gray-600 rounded px-2 py-1"
      />
      <DarkModeToggle />
    </div>
    <ChatInterface />
    <slot />
  </div>
</body>
